<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="TeleChatStyleLight" parent="MaterialDrawerTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupTheme">@style/actionMenu</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected
        </item> <!-- Material 2 defines 12% alpha, primary color -->
        <item name="material_drawer_selected_legacy">@color/material_drawer_selected
        </item> <!-- Defines the color if legacy style (Material 1, is enabled) -->
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_header_selection_text
        </item>
        <item name="material_drawer_header_selection_subtext">
            @color/material_drawer_dark_header_selection_subtext
        </item>
        <item name="material_drawer_legacy_style">false
        </item> <!-- Enables legacy Material 1 style -->
    </style>

    <style name="TeleChatStyleDark" parent="MaterialDrawerTheme">
        <!-- DarkTheme -->
    </style>

    <style name="settingsButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="normalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_large</item>
        <item name="android:textSize">@dimen/normal_textSize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="smallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_large</item>
        <item name="android:textSize">@dimen/small_textSize</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="actionMenu" parent="Theme.AppCompat.Light">

        <item name="background">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_large</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin_large</item>
    </style>

    <style name="mainToolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/horizontal_margin_large</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/appPadding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_textSize</item>
    </style>

    <style name="register_et_enter_code">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/horizontal_margin_large</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">6</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/appPadding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_textSize</item>
    </style>
</resources>